{% comment %}
  SEVENTH HEAVEN Product Grid Section
  Displays products in a clean 3-column grid with light grey backgrounds
{% endcomment %}

<div class="product-grid-section">
  <div class="product-grid-container">
    {% if section.settings.title != blank %}
      <h2 class="section-title">{{ section.settings.title }}</h2>
    {% endif %}

    <div class="product-grid">
      {% if section.settings.collection != blank %}
        {% assign products = section.settings.collection.products %}
      {% else %}
        {% assign products = collections.all.products %}
      {% endif %}

      {% for product in products limit: section.settings.products_to_show %}
        <div class="product-card">
          <div class="product-card-inner">
            <a href="{{ product.url }}" class="product-link">
              <div class="product-image-container">
                {% if product.images.size > 0 %}
                  <div class="product-slideshow">
                    {% for image in product.images %}
                      <img 
                        src="{{ image | img_url: '400x500', crop: 'center' }}"
                        alt="{{ image.alt | escape }}"
                        class="product-slide {% if forloop.first %}active{% endif %}"
                        loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                      >
                    {% endfor %}
                  </div>
                {% else %}
                  <div class="product-placeholder">
                    <span>No Image</span>
                  </div>
                {% endif %}
                
                <div class="product-info">
                  <div class="product-details">
                    <h3 class="product-title">{{ product.title }}</h3>
                    <p class="product-price">
                      {% if product.compare_at_price > product.price %}
                        <span class="product-price-sale">{{ product.price | money }}</span>
                        <span class="product-price-compare">{{ product.compare_at_price | money }}</span>
                      {% else %}
                        {{ product.price | money }}
                      {% endif %}
                    </p>
                  </div>
                </div>
              </div>
            </a>
          </div>
        </div>
      {% endfor %}
    </div>

    {% if section.settings.show_view_all and section.settings.collection != blank %}
      <div class="view-all-container">
        <a href="{{ section.settings.collection.url }}" class="view-all-button">
          View All {{ section.settings.collection.title }}
        </a>
      </div>
    {% endif %}
  </div>
</div>

{% stylesheet %}
  .product-grid-section {
    padding: 60px 0;
    background: #FFFFFF;
  }

  .product-grid-container {
    max-width: 1440px;
    margin: 0 auto;
    padding: 0 40px;
  }

  .section-title {
    text-align: center;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-size: 28px;
    font-weight: 600;
    color: #000000;
    margin-bottom: 40px;
  }

  .product-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
    margin-bottom: 40px;
  }

  .product-card {
    background: #F5F5F5;
    border-radius: 0;
    overflow: hidden;
  }

  .product-card-inner {
    height: 100%;
  }

  .product-link {
    text-decoration: none;
    color: inherit;
    display: block;
    height: 100%;
  }

  .product-image-container {
    width: 100%;
    height: 0;
    padding-bottom: 125%; /* 4:5 aspect ratio (5/4 = 1.25 = 125%) */
    background: #F5F5F5;
    position: relative;
    overflow: hidden;
  }

  .product-image-container:hover .product-info {
    opacity: 1;
  }

  .product-slideshow {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 70%;
    height: 70%;
    overflow: visible;
  }

  .product-slide {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    max-width: 90%;
    max-height: 90%;
    width: auto;
    height: auto;
    object-fit: contain;
    opacity: 0;
    transition: opacity 0s ease;
  }

  .product-slide.active {
    opacity: 1;
  }

  .product-card:hover .product-slideshow {
    transform: translate(-50%, -50%) scale(1.1);
    transition: transform 0.3s ease;
  }

  .product-placeholder {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 70%;
    height: 70%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #999;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-size: 14px;
    background: #E0E0E0;
    border-radius: 4px;
  }

  .product-info {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, 0.7);
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: 3;
    border-radius: 0;
  }



  .product-details {
    text-align: center;
  }

  .product-title {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-size: 14px;
    font-weight: 300;
    color: #FFFFFF;
    margin: 0 0 8px 0;
    text-transform: uppercase;
    letter-spacing: 2px;
    text-align: center;
    line-height: 1.4;
  }

  .product-price {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-size: 12px;
    font-weight: 400;
    color: #FFFFFF;
    margin: 0;
    text-align: center;
    letter-spacing: 1px;
  }

  .product-price-sale {
    color: #FFFFFF;
    font-weight: 600;
  }



  .view-all-container {
    text-align: center;
  }

  .view-all-button {
    display: inline-block;
    padding: 12px 24px;
    background: #000000;
    color: #FFFFFF;
    text-decoration: none;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-size: 14px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1px;
    border-radius: 4px;
    transition: background-color 0.2s ease;
  }

  .view-all-button:hover {
    background: #333333;
  }

  @media (max-width: 1024px) {
    .product-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
    }
  }

  @media (max-width: 768px) {
    .product-grid-container {
      padding: 0 20px;
    }

    .product-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .product-image-container {
      height: 300px;
    }

    .section-title {
      font-size: 24px;
      margin-bottom: 30px;
    }
  }
{% endstylesheet %}

<script>
document.addEventListener('DOMContentLoaded', function() {
  const slideshows = document.querySelectorAll('.product-slideshow');
  
  slideshows.forEach(function(slideshow) {
    const slides = slideshow.querySelectorAll('.product-slide');
    let currentSlide = 0;
    
    if (slides.length > 1) {
      setInterval(function() {
        slides[currentSlide].classList.remove('active');
        currentSlide = (currentSlide + 1) % slides.length;
        slides[currentSlide].classList.add('active');
      }, 2000); // Change slide every 2 seconds
    }
  });
});
</script>

{% schema %}
{
  "name": "Product Grid",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Featured Products"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 3,
      "max": 12,
      "step": 3,
      "default": 6,
      "label": "Number of products to show"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "default": true,
      "label": "Show 'View All' button"
    }
  ],
  "presets": [
    {
      "name": "Product Grid",
      "settings": {
        "title": "Featured Products"
      }
    }
  ]
}
{% endschema %}
