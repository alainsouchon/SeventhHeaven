{% comment %}
  SEVENTH HEAVEN Hero Landing Section
  Clean landing page with vertically centered header
{% endcomment %}

<div class="hero-landing-section">
  <div class="hero-container">
    <!-- Header content will be handled by the header section -->
  </div>
</div>

{% stylesheet %}
  .hero-landing-section {
    min-height: 100vh;
    background: #FFFFFF;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-container {
    max-width: 1440px;
    margin: 0 auto;
    padding: 0 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
  }



  @media (max-width: 768px) {
    .hero-container {
      padding: 0 20px;
    }

    .hero-title {
      font-size: 36px;
    }

    .preview-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .preview-image-placeholder {
      height: 250px;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Hero Landing",
  "settings": [],
  "presets": [
    {
      "name": "Hero Landing"
    }
  ]
}
{% endschema %}
